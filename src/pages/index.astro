---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Card from "@/components/Card.astro";

// import { getAbsoluteLocaleUrl } from "astro:i18n";
import { languageList } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";

const currentLang = Astro.currentLocale || "en";
const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Inicio -- AS Software">
  <!-- Hero Section -->
  <section
    class="relative bg-white from-gray-900 to-gray-800 text-white py-20 overflow-hidden -mt-4"
  >
    <div class="container mx-auto text-center px-4 relative z-10">
      <div class="max-w-96 mx-auto mt-20">
        <h1
          class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in text-shadow-lg"
        >
          <span
            class="text-secondary_green font-inter black 900"
          >
            DESAROLLAMOS TECNOLOGIA QUE INCREMENTA TUS INGRESOS
          </span>
        </h1>
      </div>
    </div>
  </section>

  <!-- Sección de Información -->
  <main
    class="bg-white from-gray-100 to-gray-200 dark:from-gray-900 dark:to-gray-800 py-16 relative"
  >
  <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        <span
          class="text-dark font-inter bold 700 italic"
        >
        "Más velocidad, más visibilidad, más ventas."
        </span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card
          title= '¿Cuánto tiempo y dinero pierdes al hacer lo mismo todos los días? '
          description='Nosotros lo automatizamos'
          borderColor="border-green"
          gradientFrom="from-[#39F2AE]"
          gradientTo="to-[#39F2AE]"
          textColor="text-[#39F2AE]"
          hoverTextColor="hover:text-[#39F2AE]"
          icon= "M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z"
          iconColor = "text-secondary_green "
          img = `${base}/assets/money.webp`
        />
        <Card
          title= 'Desde la automatización hasta la web'
          description= 'Todo adaptado a tus procesos'
          borderColor="border-green"
          gradientFrom="from-[#6B5B95]"
          gradientTo="to-[#8B7CB0]"
          textColor="text-[#6B5B95]"
          hoverTextColor="hover:text-[#8B7CB0]"
          icon="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
        />
        <Card
          title='¿Tu software trabaja para ti… o tú para él?'
          description= 'Descubre la diferencia'
          borderColor="border-green"
          gradientFrom="from-[#4CAF50]"
          gradientTo="to-[#81C784]"
          textColor="text-[#4CAF50]"
          hoverTextColor="hover:text-[#81C784]"
          icon="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
        />
        <Card
          title={translateLabels("home.xbox")}
          description={translateLabels("home.xbox.des")}
          borderColor="border-[#0078D4]"
          gradientFrom="from-[#0078D4]"
          gradientTo="to-[#4D9EF7]"
          textColor="text-[#0078D4]"
          hoverTextColor="hover:text-[#4D9EF7]"
          icon="M12 6v6m0 0v6m0-6h6m-6 0H6"
        />
        <Card
          title={translateLabels("home.update")}
          description={translateLabels("home.update.des")}
          borderColor="border-[#FF8C00]"
          gradientFrom="from-[#FF8C00]"
          gradientTo="to-[#FFA726]"
          textColor="text-[#FF8C00]"
          hoverTextColor="hover:text-[#FFA726]"
          icon="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
        />
        <Card
          title={translateLabels("home.performance")}
          description={translateLabels("home.performance.des")}
          borderColor="border-[#00B294]"
          gradientFrom="from-[#00B294]"
          gradientTo="to-[#26C6DA]"
          textColor="text-[#00B294]"
          hoverTextColor="hover:text-[#26C6DA]"
          icon="M13 10V3L4 14h7v7l9-11h-7z"
        />
        <Card
          title={translateLabels("home.drivers")}
          description={translateLabels("home.drivers.des")}
          borderColor="border-[#8A2BE2]"
          gradientFrom="from-[#8A2BE2]"
          gradientTo="to-[#BA68C8]"
          textColor="text-[#8A2BE2]"
          hoverTextColor="hover:text-[#BA68C8]"
          icon="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
        />
        <Card
          title={translateLabels("home.appearance")}
          description={translateLabels("home.appearance.des")}
          borderColor="border-[#FF4081]"
          gradientFrom="from-[#FF4081]"
          gradientTo="to-[#FF80AB]"
          textColor="text-[#FF4081]"
          hoverTextColor="hover:text-[#FF80AB]"
          icon="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
        />
        <Card
          title={translateLabels("home.support")}
          description={translateLabels("home.support.des")}
          borderColor="border-[#00BCD4]"
          gradientFrom="from-[#00BCD4]"
          gradientTo="to-[#4DD0E1]"
          textColor="text-[#00BCD4]"
          hoverTextColor="hover:text-[#4DD0E1]"
          icon="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
        />
      </div>
    </div>
  </main>

  
</BaseLayout>

<style>
  .group:hover h2 span,
  .group:hover h3 span {
    background-position: 100% 50%;
    transition: background-position 0.5s ease-out;
  }

  h2 span,
  h3 span {
    background-size: 200% auto;
    background-position: 0% 50%;
    transition: background-position 0.3s ease-in;
  }
</style>
